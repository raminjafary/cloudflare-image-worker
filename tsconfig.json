{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "ESNext",
		"lib": ["ESNext"],
		"module": "ESNext",
		"moduleResolution": "node",
		"types": ["@cloudflare/workers-types", "@types/node", "@types/yargs"],
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": false,
		"noEmit": false,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["./src/**/*", "scripts/**/*"]
}
